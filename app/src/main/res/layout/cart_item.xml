<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_app_background">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="27dp"
            >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="144dp"
                            android:layout_height="match_parent"
                            android:id="@+id/image_container"
                            app:cardCornerRadius="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/item_image_view"
                                tools:src="@drawable/margarita_img"
                                />
                        </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_text_view"
                        app:layout_constraintLeft_toRightOf="@id/image_container"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="23dp"
                        style="@style/Title"
                        tools:text="Margarita"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_text_view"
                        app:layout_constraintTop_toBottomOf="@+id/title_text_view"
                        app:layout_constraintLeft_toRightOf="@id/image_container"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        style="@style/PriceText"
                        tools:text="859â‚½"
                        />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        style="@style/PlusMinusButton"
                        android:id="@+id/minus_button"
                        android:src="@drawable/ic_minus_svg"
                        app:layout_constraintLeft_toRightOf="@id/image_container"
                        android:layout_marginStart="23dp"
                        app:layout_constraintTop_toBottomOf="@+id/price_text_view"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quantity_text_view"
                        app:layout_constraintLeft_toRightOf="@+id/minus_button"
                        app:layout_constraintTop_toBottomOf="@+id/price_text_view"
                        android:layout_marginTop="19dp"
                        android:layout_marginStart="20dp"
                        style="@style/AmountText"
                        android:textSize="18sp"
                        tools:text="3"
                    />
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        style="@style/PlusMinusButton"
                        android:id="@+id/plus_button"
                        android:src="@drawable/ic_plus_svg"
                        app:layout_constraintLeft_toRightOf="@+id/quantity_text_view"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="@+id/minus_button"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>