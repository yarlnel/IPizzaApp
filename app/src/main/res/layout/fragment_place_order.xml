<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_app_beige"
    tools:context=".ui.ordered_pizza.PlaceOrderFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        android:src="@drawable/app_logo_img"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/successfully_text"
        style="@style/HappyText"
        android:layout_marginTop="24sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView"
        android:text="@string/order_was_successfully_sent"
        />

    <TextView
        style="@style/DescriptionText"
        android:layout_width="260dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/successfully_text"
        android:layout_marginTop="9dp"
        android:layout_height="wrap_content"
        android:text="@string/we_will_call_u"
        android:textSize="14sp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppButton.WhiteButton"
        android:id="@+id/backToMenuButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        android:text="@string/back_to_menu"
        />

</androidx.constraintlayout.widget.ConstraintLayout>