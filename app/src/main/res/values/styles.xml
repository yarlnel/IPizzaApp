<resources>


    <style name="AppButton">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="font">@font/lato_black</item>
        <item name="fontWeight">900</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppBackgroundTheme">
        <item name="android:background">@color/color_app_background</item>
    </style>

    <style name="BtnText">
        <item name="font">@font/lato_black</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="fontWeight">900</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="AppButton.BeigeButton">
        <item name="android:background">@drawable/app_beige_button_background</item>
    </style>

    <style name="AppButton.WhiteButton">
        <item name="android:background">@drawable/app_white_button_background</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="background">@color/color_app_background</item>
    </style>


    <style name="DescriptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_dialog</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_splash_background</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="colorPrimary">@color/color_app_beige</item>
        <item name="colorPrimaryVariant">@color/color_app_beige</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="PlusMinusButton">
        <item name="android:background">@drawable/plus_minus_background</item>
        <item name="android:width">32dp</item>
        <item name="android:height">32dp</item>
    </style>

    <style name="AmountText">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HappyText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="PriceText" parent="HappyText" />

    <style name="ItemTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="font">@font/lato_bold</item>
    </style>

    <style name="BottomContainer">
        <item name="android:background">@drawable/rounded_top_angle_white</item>
    </style>

    <style name="WhiteTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="fontWeight">600</item>
    </style>




</resources>